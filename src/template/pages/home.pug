extends ../extend/default

block variables
	- var title = 'JK Video';

block main
	main.content.js-fullpage(data-page='home')

		//begin screen
		+b.SECTION.section.fp-section(data-anchor='screen')
			+e.inner
				+e.block._left
				+e.block._right
					+e.H2.title.title-lg Мы - глаза Вашего праздника
					+e.P.descr От 10000 р. запечатлим все важные события Вашей жизни
					+e.A.link.link(href='#!') Задать вопрос

		//begin about
		+b.SECTION.section.fp-section(data-anchor='about')
			//begin tabs
			+b.c-tabs
				+e.tabs-for
					+e.tab
						+e.tab-in
							-
								circleList = [{
								count: '300',
								text: 'мероприятий'
								}, {
								count: '250',
								text: 'репортажей'
								}, {
								count: '50',
								text: 'рекламных видео'
								}, {
								count: '21',
								text: 'маркетинг'
								}];
							mixin circleItem(item)
								+b.circle-item.section__circle-item
									+e.text
										+e.SPAN.count= item.count
										+e.P.descr= item.text

									svg.circle-item__svg(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 291.95 291.75')
										g.circle-1
											path(d='M247,245.47a142.92,142.92,0,0,0-.09-202.12l-.11-.11')
											path(d='M44.57,43.44a141.92,141.92,0,0,0,.09,200.71l.11.11')
										g.circle-2
											path(d='M66.52,65.34a111.94,111.94,0,0,1,158.31-.24l.08.08')
											path(d='M225.07,223.57a111.94,111.94,0,0,1-158.31.24l-.08-.08')
										line.line-1(x1='210.77', y1='81.19', x2='290.89', y2='1.06')
										line.line-2(x1='1.06', y1='290.69', x2='81.31', y2='210.44')
										line.line-3(x1='86.04', y1='205.94', x2='206.6', y2='85.37')

							each item in circleList
								+circleItem(item)

					+e.tab
						+e.tab-in
							-
								circleList = [{
								count: '300',
								text: 'мероприятий'
								}, {
								count: '250',
								text: 'репортажей'
								}, {
								count: '50',
								text: 'рекламных видео'
								}, {
								count: '21',
								text: 'маркетинг'
								}];
							+circleItem(item)

				+e.tabs-nav
					-tabsNavList = ['События', 'Креатив', 'Видео', 'PR', 'Маркетинг']
					for tabsNavItem, index in tabsNavList
						-activeIndex = 1
						+e.tabs-el(class= index === activeIndex - 1 ? 'is-active' : '')= tabsNavItem

		//begin about
		+b.SECTION.section.fp-section(data-anchor='portfolio')
			+e.inner
				+e.video
				+e.text
					+b.H2.title-lg erferferf erfа
					+e.P.descr От 10000 р. запечатлим все важные события Вашей жизни
					+e.A.link.link(href='#!') Задать вопрос